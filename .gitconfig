[user]
	name = Garrett George
	email = garrett.michael.george@gmail.com

[alias]
	br = branch
	ca = commit --amend
	cc = commit
	co = checkout
	last = log -1 HEAD
	pf = push --force-with-lease
	st = status
	unstage = reset HEAD --

# Use Delta to format git printed output
# https://github.com/dandavison/delta#configuration
[pager]
	diff = delta
	log = delta
	reflog = delta
	show = delta

[delta]
	plus-style = "syntax #012800"
	minus-style = "syntax #340001"
	syntax-theme = gruvbox-dark
	navigate = true
	side-by-side = true

[interactive]
	diffFilter = delta --color-only

[diff]
	colorMoved = default
[core]
	excludesFile = /Users/garrett.george/.gitignore
	sshCommand = /usr/bin/ssh
